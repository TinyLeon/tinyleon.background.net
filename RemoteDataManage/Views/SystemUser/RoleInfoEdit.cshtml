@{
    ViewBag.Title = "角色编辑";
    Layout = "~/Views/Shared/_LayoutBootstrap3.0.cshtml";
}
@model  RemoteDataManageModel.SystemUser.SystemRoleInfoModel

    <div class="col-sm-12" style="padding-left:50px;padding-right:50px;">

    @using (Html.BeginForm("RoleInfoEdit", "SystemUser", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(m => m.RoleID)
        <div class="form-group">
            <label class="col-xs-4 control-label">角色名称：</label>
            <div class="col-xs-8">
                @Html.TextBoxFor(m => m.RoleName, new { @class = "form-control input-sm" })
            </div>
        </div>
        <div class="form-group">
            <label class="col-xs-4 control-label">备注：</label>
            <div class="col-xs-8">
                @Html.TextAreaFor(m => m.Remark, new { @class = "form-control input-sm" })
            </div>
        </div>
        <div class="form-group">
            <div style="text-align:center">
                <input type="submit" class="btn btn-primary" value="保 存" />
                @if (!string.IsNullOrEmpty(ViewBag.Message))
                {
                    if (ViewBag.IsSuccess)
                    {
                        @Html.Raw("<script>bootbox.alert('" + ViewBag.Message + "',function(){CloseDialogAndRefreshParent();}); </script>")
                    }
                    else
                    {
                        @Html.Raw("<script>bootbox.alert('" + ViewBag.Message + "');</script>")
                    }
                }
            </div>
        </div>
    }
</div>

