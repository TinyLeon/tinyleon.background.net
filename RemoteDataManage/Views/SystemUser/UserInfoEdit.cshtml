@{
    ViewBag.Title = "用户编辑";
    Layout = "~/Views/Shared/_LayoutBootstrap3.0.cshtml";
}
@model  RemoteDataManageModel.SystemUser.SystemUserInfoModel

<div class="col-xs-12" style="padding-left:50px;padding-right:50px;">

    @using (Html.BeginForm("UserInfoEdit", "SystemUser", FormMethod.Post, new { @class = "form-horizontal" }))
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(m => m.UserID)
    <div class="form-group">
        <label class="col-xs-4 control-label">用户名：</label>
        <div class="col-xs-8">
            @Html.TextBoxFor(m => m.UserName, new { @class = "form-control input-sm" })
        </div>        
    </div>
        <div class="form-group">
            <label class="col-xs-4 control-label">真实姓名：</label>
            <div class="col-xs-8">
                @Html.TextBoxFor(m => m.RealName, new { @class = "form-control input-sm" })
            </div>
        </div>
        <div class="form-group">
            <label class="col-xs-4 control-label">密码：</label>
            <div class="col-xs-8">
                @Html.PasswordFor(m => m.Password, new { @class = "form-control input-sm" })
            </div>
        </div>
        <div class="form-group">
            <label class="col-xs-4 control-label">Email：</label>
            <div class="col-xs-8">
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control input-sm" })
            </div>
        </div>
        <div class="form-group">
            <label class="col-xs-4 control-label">手机号：</label>
            <div class="col-xs-8">
                @Html.TextBoxFor(m => m.Mobile, new { @class = "form-control input-sm" })
            </div>
        </div>
        <div class="form-group">
            <div style="text-align:center">
                <input type="submit" class="btn btn-primary" value="保 存" />
                @if (!string.IsNullOrEmpty(ViewBag.Message))
                {
                    if (ViewBag.IsSuccess)
                    {
                        @Html.Raw("<script>bootbox.alert('" + ViewBag.Message + "',function(){CloseDialogAndRefreshParent();}); </script>")
                    }
                    else
                    {
                        @Html.Raw("<script>bootbox.alert('" + ViewBag.Message + "');</script>")
                    }
                }
            </div>
        </div>
    }
</div>
