@{
    ViewBag.Title = "菜单编辑";
    Layout = "~/Views/Shared/_LayoutBootstrap3.0.cshtml";
}
@model  RemoteDataManageModel.SystemUser.SystemMenuInfoModel

<div class="col-sm-12" style="padding-left:50px;padding-right:50px;">

    @using (Html.BeginForm("MenuInfoEdit", "SystemUser", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(m => m.MenuID)
        @Html.HiddenFor(m => m.MenuLevel)
        
        <div class="form-group">
            <label class="col-xs-4 control-label">父菜单：</label>
            <div class="col-xs-8">
                @Html.TextBoxFor(m => m.ParentMenuID, new { @class = "form-control input-sm", @readonly = "readonly" })
            </div>
        </div>
        <div class="form-group">
            <label class="col-xs-4 control-label">菜单名称：</label>
            <div class="col-xs-8">
                @Html.TextBoxFor(m => m.MenuName, new { @class = "form-control input-sm" })
            </div>
        </div>
        <div class="form-group">
            <label class="col-xs-4 control-label">菜单地址：</label>
            <div class="col-xs-8">
                @Html.TextBoxFor(m => m.MenuURL, new { @class = "form-control input-sm" })
            </div>
        </div>
        <div class="form-group">
            <label class="col-xs-4 control-label">菜单图标：</label>
            <div class="col-xs-8">
                @Html.TextBoxFor(m => m.MenuImage, new { @class = "form-control input-sm" })
            </div>
        </div>
        <div class="form-group">
            <label class="col-xs-4 control-label">菜单类别：</label>
            <div class="col-xs-8">
                @Html.TextBoxFor(m => m.MenuType, new { @class = "form-control input-sm" })
            </div>
        </div>
        <div class="form-group">
            <label class="col-xs-4 control-label">排序：</label>
            <div class="col-xs-8">
                @Html.TextBoxFor(m => m.Sorting, new { @class = "form-control input-sm" })
            </div>
        </div>
        <div class="form-group">
            <label class="col-xs-4 control-label">备注：</label>
            <div class="col-xs-8">
                @Html.TextAreaFor(m => m.Remark, new { @class = "form-control input-sm" })
            </div>
        </div>
        <div class="form-group">
            <div style="text-align:center">
                <input type="submit" class="btn btn-primary" value="保 存" />
                @if (!string.IsNullOrEmpty(ViewBag.Message))
                {
                    if (ViewBag.IsSuccess)
                    {
                        @Html.Raw("<script>bootbox.alert('" + ViewBag.Message + "',function(){CloseDialogAndRefreshParent();}); </script>")
                    }
                    else
                    {
                        @Html.Raw("<script>bootbox.alert('" + ViewBag.Message + "');</script>")
                    }
                }
            </div>
        </div>
    }
</div>
